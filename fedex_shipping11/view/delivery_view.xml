<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_delivery_carrier_fedex_inherit" model="ir.ui.view">
            <field name="name">delivery.carrier.form.inherit.fedex</field>
            <field name="model">delivery.carrier</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base_shipping_v11.view_delivery_carrier_inherit_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='select_service']" position="after">

                    <field name="service_type_fedex" attrs="{'invisible': [('service_name','!=', 'Is Fedex')],'required':[('service_name','!=', 'Is Fedex')]}" sequence="10"/>

                </xpath>
            </field>
        </record>

    </data>
</odoo>
